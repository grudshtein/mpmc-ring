{
  "version": 3,
  "configurePresets": [
    {
      "name": "clang-release",
      "generator": "Ninja",
      "binaryDir": "out/build/clang-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "clang-asan",
      "generator": "Ninja",
      "binaryDir": "out/build/clang-asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "clang-tsan",
      "generator": "Ninja",
      "binaryDir": "out/build/clang-tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "ENABLE_TSAN": "ON"
      }
    },
    {
      "name": "clang-ubsan",
      "generator": "Ninja",
      "binaryDir": "out/build/clang-ubsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "ENABLE_UBSAN": "ON"
      }
    },

    {
      "name": "msvc-ninja-release",
      "generator": "Ninja",
      "binaryDir": "out/build/msvc-ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
      }
    },
    {
      "name": "msvc-ninja-asan",
      "inherits": "msvc-ninja-release",
      "binaryDir": "out/build/msvc-ninja-asan",
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "msvc-ninja-debug",
      "generator": "Ninja",
      "binaryDir": "out/build/msvc-ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
      }
    },

    {
      "name": "mingw-release",
      "generator": "Ninja",
      "binaryDir": "out/build/mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "clang-release",
      "configurePreset": "clang-release"
    },
    {
      "name": "clang-asan",
      "configurePreset": "clang-asan"
    },
    {
      "name": "clang-tsan",
      "configurePreset": "clang-tsan"
    },
    {
      "name": "clang-ubsan",
      "configurePreset": "clang-ubsan"
    },
    {
      "name": "msvc-ninja-release",
      "configurePreset": "msvc-ninja-release"
    },
    {
      "name": "msvc-ninja-asan",
      "configurePreset": "msvc-ninja-asan"
    },
    {
      "name": "msvc-ninja-debug",
      "configurePreset": "msvc-ninja-debug"
    },
    {
      "name": "mingw-release",
      "configurePreset": "mingw-release"
    }
  ],

  "testPresets": [
    {
      "name": "clang-release",
      "configurePreset": "clang-release"
    },
    {
      "name": "clang-asan",
      "configurePreset": "clang-asan"
    },
    {
      "name": "clang-tsan",
      "configurePreset": "clang-tsan"
    },
    {
      "name": "clang-ubsan",
      "configurePreset": "clang-ubsan"
    },
    {
      "name": "msvc-ninja-release",
      "configurePreset": "msvc-ninja-release"
    },
    {
      "name": "msvc-ninja-asan",
      "configurePreset": "msvc-ninja-asan"
    },
    {
      "name": "msvc-ninja-debug",
      "configurePreset": "msvc-ninja-debug"
    },
    {
      "name": "mingw-release",
      "configurePreset": "mingw-release"
    }
  ]
}
